{
  "name": "firebase-template",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "start:dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "build": "./build.sh",
    "server": "yarn workspace backend dev",
    "client": "yarn workspace frontend dev",
    "zip": "./zip.sh",
    "start": "yarn workspace backend start"
  },
  "dependencies": {
    "concurrently": "^8.1.0"
  }
}
